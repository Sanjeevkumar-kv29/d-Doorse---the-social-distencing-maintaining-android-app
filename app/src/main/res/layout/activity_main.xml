<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CFAF9FB"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bluetooth_discoverdevices.MainActivity">

    <ListView
        android:id="@+id/lvNewDevices"
        android:layout_width="395dp"
        android:layout_height="455dp"

        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        android:background="#F7F7FA" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="#7770ff"
        android:drawableTint="#FA000000"
        android:fontFamily="serif-monospace"
        android:foregroundTint="#F8F5F5"
        android:shadowColor="#FBF8F8"
        android:text="GUYS USE ME AND SAY TO EVERYONE BHAI JARA_DOORSE !!!"
        android:textAlignment="center"
        android:textColor="#FA000000"
        android:textColorHighlight="#FDFBFB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="96dp"
        android:text="DISCOVERING NEARBY PEOPLE...."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="395dp"
        android:layout_height="66dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="596dp"
        android:text="( don't worry i will alert you when you forget to maintain social distancing and help to safe you from COVID-19 )" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="38dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="70dp"
        android:background="#00673AB7"
        android:foregroundTint="#DD9EE8"
        android:indeterminateTint="#1BBFB0"
        android:progressTint="#CCA5E8" />

</RelativeLayout>